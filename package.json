{
  "name": "portfolio-site-ane4kin",
  "version": "1.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/anechka/portfolio-site.git"
  },
  "description": "Freelancer parallax portfolio web-site",
  "homepage": "http://anya.site",
  "scripts": {
    "pug": "pug src/pug/index.pug --out deploy/docker/dist/ --pretty -O '{\"www\": \"novikova.us\"}'",
    "pug:watch": "pug --out deploy/docker/dist/ --pretty --watch src/pug/",
    "serve": "http-server --silent -c 1 -o",
    "js": "rollup -c",
    "js:vendor": "rollup -c rollup.config.vendor.js",
    "js:watch": "rollup -c -w --sourcemap",
    "lint": "eslint --format codeframe --ext .js,.vue src/javascript || exit 0",
    "less": "lessc src/less/main.less deploy/docker/dist/css/main.min.css --source-map --clean-css='--s1 --advanced'",
    "less:watch": "watch --interval=0.3 'echo Less files compiling && lessc src/less/main.less deploy/docker/dist/css/main.min.css --source-map --clean-css=\"--s1 --advanced\"' src/less",
    "watch": "concurrently \"npm run less:watch\" \"npm run js:watch\" \"npm run pug:watch\"",
    "build": "concurrently \"npm run pug\" \"npm run less\" \"npm run js\""
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^4.0.1",
    "less": "^3.8.1",
    "less-plugin-clean-css": "^1.5.1",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "rollup": "^0.66.3",
    "rollup-plugin-includepaths": "^0.2.3",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-re": "^1.0.7",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-vue": "^4.3.2",
    "vue": "^2.5.17",
    "vue-template-compiler": "^2.5.17",
    "watch": "^1.0.2"
  }
}
