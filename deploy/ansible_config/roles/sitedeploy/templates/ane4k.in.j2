server {
	listen 80;

	# Make site accessible from http://ane4k.in/
	server_name ane4k.in;

	root {{ site_root_dir }}; 
	index index-ru.html index-ru.htm index.html index.htm;

	# deny access to .jade files
	#
	location ~ /jade {
		deny all;
	}

	# serve static files directly
	location ~* ^.+.(jpg|jpeg|gif|css|png|js|ico|html|xml|txt|svg)$ {
		access_log	off;
	}
}
