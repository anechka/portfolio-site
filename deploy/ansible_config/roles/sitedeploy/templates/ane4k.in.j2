server {
	listen 80;

	# Make site accessible from http://ane4k.in/
	server_name ane4k.in;

	root {{ site_root_dir }}/dist;
	index index-ru.html index-ru.htm;

	# deny access to .jade files
	#
	location /src {
		deny all;
	}

	# serve static files directly
	location ~* ^.+.(jpg|jpeg|gif|css|png|js|ico|html|xml|txt|svg|otf|ttf)$ {
		access_log	off;
		expires		1w;
	}
}
