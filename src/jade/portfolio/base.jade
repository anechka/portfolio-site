          script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
          script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
        link(rel="stylesheet", href="../../css/main.min.css")

    body.portfolio(style="background-color: #1c456f; color: white;")
        .header_clouds
        .header_container
            a(href="http://anya.site")
                img.img-circle.img-avatar(src="../../images/avatar.jpg", width="120px", height="120px", alt="Anya Novikova photo", title="Anya Novikova")

        .container

            block portfolio-thumb


            .row.description-content
                .col-md-6.description-project
                    .row
                        h3
                            img(src="../../images/briefcase.svg").glyphicon.glyphicon-briefcase
                            | About project

                        block about-project

                        h4 A little bit about the team.

                        block about-team

                    .row
                        h3 My role

                        block my-role

                    .row
                        h3 Result

                        block result

                block images-content


        //- Concatenated by gulp task Javascript
        script(type="text/javascript", src="../../js/all.js", defer="defer")

        // Google Analytics script
        script(type='text/javascript').
            window._gaq = window._gaq || [];
            window._gaq.push(['_setAccount', 'UA-50636137-1']);
            window._gaq.push(['_trackPageview']);
